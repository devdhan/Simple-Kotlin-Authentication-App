<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF4F2"
    tools:context="com.example.test.Screens.SignUp">

    <!-- TextView for the "SIGN UP" title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35sp"
        android:text="SIGN UP"
        android:fontFamily="@font/euclid_circular_b_bold"
        android:textSize="35sp"
        android:textColor="#7C8363"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Button for signing up -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20sp"
        android:textColor="#EDF4F2"
        android:background="@drawable/btn"
        android:text="SIGN UP"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/euclid_circular_b_bold"
        app:layout_constraintBottom_toTopOf="@id/button3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Button for navigating to the login screen -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="40dp"
        android:textColor="#7C8363"
        android:background="@drawable/btn2"
        android:text="LOGIN"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/euclid_circular_b_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TextInputLayout for the full name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:errorTextAppearance="@font/euclid_circular_b_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="16sp"
            android:inputType="text"
            android:fontFamily="@font/euclid_circular_b_regular"
            android:letterSpacing="0.05"
            android:textColorHint="#7C8363"
            android:textColor="#000000"
            android:hint="Full Name" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TextInputLayout for the email address -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        app:errorTextAppearance="@font/euclid_circular_b_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:fontFamily="@font/euclid_circular_b_regular"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:letterSpacing="0.05"
            android:textColorHint="#7C8363"
            android:textColor="#000000"
            android:hint="Email Address" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TextInputLayout for the password -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        app:errorTextAppearance="@font/euclid_circular_b_medium"
        app:passwordToggleEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:fontFamily="@font/euclid_circular_b_regular"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:letterSpacing="0.05"
            android:textColorHint="#7C8363"
            android:textColor="#000000"
            android:hint="Password" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TextInputLayout for confirm password -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/conpass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        app:errorTextAppearance="@font/euclid_circular_b_medium"
        app:passwordToggleEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:fontFamily="@font/euclid_circular_b_regular"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:letterSpacing="0.05"
            android:textColorHint="#7C8363"
            android:textColor="#000000"
            android:hint="Confirm Password" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
